@model WebApplication2.Models.RegisterNewLocationViewModel
@using Isa2017Cinema.Models;
@{
    ViewBag.Title = "Add new admin";

    List<SelectListItem> items = new List<SelectListItem>();

    items.Add(new SelectListItem { Text = "Cinema", Value = "0" });

    items.Add(new SelectListItem { Text = "Theatre", Value = "1" });

    List<SelectListItem> locAdminsSelList = new List<SelectListItem>();

    using (var ctx = new ApplicationDbContext())
    {
        var locAdminQueryData = ctx.Database.SqlQuery<LocationAdmin>("select * from AspNetUsers where Admin_Type = 1 and MyLocation IS NULL").ToList();
        if (locAdminQueryData.Count > 0)
        {
            foreach (var locAdmin in locAdminQueryData)
            {
                locAdminsSelList.Add(new SelectListItem() { Text = locAdmin.Name, Value = locAdmin.Id });
            }
        }
    }
}

<h2 style="color:white">Register new location:</h2>
@using (Html.BeginForm("AddLocation", "System_Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <form class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-5">
                <div class="form-group">
                    <label class="control-label col-xs-3" style="color:white">Location type</label>
                    <div class="col-xs-9">
                        @Html.DropDownListFor(m => m.Location_Type, items, new { @class = "form-control" });
                        @Html.ValidationMessageFor(m => m.Location_Type, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                <div class="form-group">
                    <label class="control-label col-xs-3" style="color:white">Location admin</label>
                    <div class="col-xs-9">
                        @Html.DropDownListFor(m => m.Location_Admin_Id, locAdminsSelList, new { @class = "form-control" });
                        @Html.ValidationMessageFor(m => m.Location_Admin_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                <div class="form-group">
                    <label class="control-label col-xs-3" style="color:white">Location name</label>
                    <div class="col-xs-9">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                <div class="form-group">
                    <label class="control-label col-xs-3" style="color:white">Address</label>
                    <div class="col-xs-9">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                <div class="form-group">
                    <label class="control-label col-xs-3" style="color:white">Description</label>
                    <div class="col-xs-9">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                <div class="col-xs-9"></div>
                <div class="col-xs-3">
                    <button type="submit" class="btn btn-default">Add</button>
                </div>
                @if (locAdminsSelList.Count == 0)
                {
                    <span class="text-danger">There are no available Location Admins, please add a new one before trying to add a new Location.</span><br>
                }
            </div>
        </div>
    </form>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
