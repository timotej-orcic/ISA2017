@model WebApplication2.Models.ProjectionViewModel

@{
    ViewBag.Title = "AddProjection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("ProjectionSubmit", "Location",new { MyLocation = ViewBag.location }, FormMethod.Post, new { @class = "form-horizontal", role = "form", style = "color:white", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4 style="color:white">New projection.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
 
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label", style = "color:white" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ActorsList, new { @class = "col-md-2 control-label", style = "color:white" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.ActorsList, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genre, new { @class = "col-md-2 control-label", style = "color:white" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Genre, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DirectorName, new { @class = "col-md-2 control-label", style = "color:white" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DirectorName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DurationTime, new { @class = "col-md-2 control-label", style = "color:white" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DurationTime, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label", style = "color:white" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-5">
            <div class="form-group">
                <label class="control-label col-xs-3" style="color:white">Product image</label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(m => m.ImageUpload, new { type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ImageUpload, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Add projection" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

