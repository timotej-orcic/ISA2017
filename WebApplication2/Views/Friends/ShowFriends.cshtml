@model WebApplication2.Models.FriendsViewModel
@{
    ViewBag.Title = "ShowFriends";
}

<h2>Find your friends</h2>
@using (Html.BeginForm("Search", "Friends", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
 @Html.AntiForgeryToken()
 <hr />
 @Html.ValidationSummary("", new { @class = "text-danger" })
<form class="form-horizontal">
    <div class="row">
        <div class="col-sm-5">
            <div class="form-group">
                <label  class="control-label col-xs-3">First name</label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group">
                <label  class="control-label col-xs-3">Last name</label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span>Search</button>
        </div>
    </div>
</form>
}
<div>@if (ViewBag.usersToShow.Count>0)
{
    foreach(var reg in ViewBag.usersToShow)
    {   
        <div class="jumbotron" style="background-color:lightgray;  width: 400px; " >
            <dl class="dl-horizontal">
                <dt><label style="font-size: 16px; ">First name:</label> </dt>
                <dd><label style="font-size: 16px;">@reg.Name </label> </dd>

                <dt><label style="font-size: 16px;">Last name: </label></dt>
                <dd><label style="font-size: 16px;">@reg.LastName  </label></dd>

                <dt><label style="font-size: 16px;">Username:</label> </dt>
                <dd><label style="font-size: 16px;">@reg.UserName </label> </dd>
            </dl>
            @foreach (var friend in ViewBag.FriendList)
            {
                if (reg.Equals(friend))
                {
                    <label>Prijatelji ste.</label>
                }
                else
                {
                    <label>Dodaj prijatelja</label>
                }

            } 
</div>
    }
}</div>

