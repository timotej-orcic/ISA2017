@model List<ApplicationUser>
@using Microsoft.AspNet.Identity;
@using Isa2017Cinema.Models;
@{
    ViewBag.Title = "Home Page";
}
<br />
@{
    if (ViewBag.enableFanzoneOptions && ViewBag.enableLocationOptions)
    {
        if (User.IsInRole("Regular_User") || Request.IsAuthenticated==false)
        {
            <div class="jumbotron" style="background-color: transparent">
                <a href="@Url.Action("ShowCinemas", "App")">

                    <img src="~/images/cinema.jpg" width="470" height="300" style="white-space:nowrap; border-width:medium;border:solid; border-color:white" />
                </a>
                <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  </label>
                <a href="@Url.Action("ShowTheatres", "App")">
                    <img src="~/images/theater.jpg" width="470" height="300" style="white-space:nowrap; border-width:medium;border:solid; border-color:white" />
                </a>
                <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;   </label>
                <label style="color:white">Cinemas</label>
                <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;   </label>
                <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;   </label>
                <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;   </label>

                <label style="color:white">Theatres</label>
            </div>
        }
    }
    else if(ViewBag.enableFanzoneOptions == false)
    {
        <h2>Welcome new Fanzone Administrator! <br> As this is your first login, please change your password at the link below:</h2>
        <a href="@Url.Action("FirstLoginPasswordChange", "FanZone")">Change my password</a>
    }
    else if (ViewBag.enableLocationOptions == false)
    {
        <h2>Welcome new Location Administrator! <br> As this is your first login, please change your password at the link below:</h2>
        <a href="@Url.Action("FirstLoginPasswordChange", "FanZone")">Change my password</a>
    }
}
@if (TempData["success"] != null)
{
    <div id="IndexSuccessMessage" class="row">
        <h3>@TempData["success"]</h3>
    </div>
}